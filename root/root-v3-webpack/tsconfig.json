{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/auto-imports.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es2017",
    "allowJs": true,
    "types": [
      "node",
      "webpack-env"
     ],
  }
}
